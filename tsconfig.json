{
	"compilerOptions": {
	  "outDir": "./out",
	  "rootDir": "./src",
	  "module": "commonjs",
	  "target": "es6",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "baseUrl": "./src", // Make sure this is set correctly
	  "paths": {
		"*": ["node_modules/*"]
	  }
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
  }
  